<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="5dp"
            android:layout_weight="5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/ic_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/allerta"
                    android:textColor="@color/black"
                    android:textSize="17dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ic_type"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/lightgrey"
                    android:layout_below="@+id/ic_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/acme"
                        android:layout_below="@+id/ic_type"
                        android:id="@+id/ic_price"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/ic_detail"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/acme"
                    android:layout_below="@+id/ic_price"
                    android:text="Well Sanitized Kitchen."/>

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:padding="10dp"
                android:src="@drawable/ic_image_black_24dp"
                android:id="@+id/ic_image"
                android:layout_weight="4"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
