<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".canteen.Canteen_add_item">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg5"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/semitransparent"
                android:layout_margin="30dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/cai_image"
                    android:src="@drawable/ic_image_black_24dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cai_name"
                    android:hint="name"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:textColorHint="@color/white"
                    android:background="@drawable/orange_edttxt"
                    android:layout_below="@+id/cai_image"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/cai_l2"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/cai_name"
                    android:background="@color/semi_white">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/cai_type"
                    android:background="@drawable/orange_edttxt"
                    android:layout_below="@+id/cai_name"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cai_price"
                    android:textColorHint="@color/white"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/orange_edttxt"
                    android:hint="price"
                    android:inputType="number"
                    android:layout_below="@+id/cai_l2"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cai_quantity"
                    android:layout_margin="5dp"
                    android:hint="quantity per plate"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:background="@drawable/orange_edttxt"
                    android:inputType="number"
                    android:layout_below="@+id/cai_price"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/cai_l1"
                    android:layout_below="@+id/cai_quantity"
                    android:layout_margin="5dp"
                    android:weightSum="2">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:background="@drawable/login_register_button"
                        android:layout_margin="10dp"
                        android:id="@+id/cai_add" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View"
                        android:textColor="@color/white"
                        android:layout_margin="10dp"
                        android:background="@drawable/login_register_button"
                        android:layout_weight="1"
                        android:id="@+id/cai_view"
                        />
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_below="@id/cai_l1"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:background="@drawable/login_register_button"
                    android:id="@+id/cai_cancel"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>